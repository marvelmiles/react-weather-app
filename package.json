{
  "name": "Pwa-mastery",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "snyk test && react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js --max-warnings 5",
    "serve:build": "serve -s build",
    "e2e:ci": "testcafe chrome:headless e2e/*.js --app 'npm run serve:build' -r xunit:/tmp/test-results/res.xml ",
    "netlify:deploy": "netlify deploy --dir=./build -p -m \"$(git log -l --pretty=%B)\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "netlify-cli": "^4.4.2",
    "serve": "^12.0.0",
    "snyk": "^1.658.0",
    "testcafe": "^1.15.0",
    "testcafe-reporter-xunit": "^2.1.0"
  }
}
